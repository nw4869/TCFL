<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nightwind.tcfl.activity.ProfileActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/item0"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/username"
            android:hint="username"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@+id/avatar"
            android:layout_toEndOf="@+id/avatar" />
        <!--<TextView-->
            <!--android:id="@+id/sign"-->
            <!--style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"-->
            <!--android:hint="type your sign"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ellipsize="end"-->
            <!--android:maxLines="1"-->
            <!--android:singleLine="false"-->
            <!--android:layout_below="@id/username"-->
            <!--android:layout_alignLeft="@+id/username"-->
            <!--android:layout_alignStart="@+id/username" />-->

        <EditText
            android:id="@+id/sign"
            android:hint="type your sign"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:singleLine="true"
            android:maxLength="100"
            android:layout_below="@id/username"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username"
            style="?android:attr/textViewStyle"
            android:background="@null"/>

    </RelativeLayout>
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item0"
        android:background="#1e000000" />


    <RelativeLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"
        android:background="@drawable/background_tab"
        android:padding="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_name1"
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等级"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_level"
            android:hint="your level"
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginLeft="80dp" />
    </RelativeLayout>
    <!--分隔符-->
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item1"
        android:background="#1e000000" />

    <RelativeLayout
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider2"
        android:background="@drawable/background_tab"
        android:padding="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_name2"
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/et_age"
            android:hint="type your age"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="3"
            style="?android:attr/textViewStyle"
            android:background="@null"
            android:layout_marginLeft="80dp" />
    </RelativeLayout>
    <!--分隔符-->
    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item2"
        android:background="#1e000000" />

    <RelativeLayout
        android:id="@+id/item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:background="@drawable/background_tab"
        android:padding="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_name3"
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:gravity="center_horizontal" />
        <!--<TextView-->
            <!--android:id="@+id/tv_sex"-->
            <!--android:hint="select your sex"-->
            <!--style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="top"-->
            <!--android:layout_marginLeft="80dp" />-->

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sex_spinner"
            android:gravity="top"
            android:layout_marginLeft="72dp"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>
    <!--分隔符-->
    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item3"
        android:background="#1e000000" />

    <RelativeLayout
        android:id="@+id/item4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider4"
        android:background="@drawable/background_tab"
        android:padding="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_name4"
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职业"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/et_work"
            android:hint="type your work"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:singleLine="true"
            android:maxLength="20"
            style="?android:attr/textViewStyle"
            android:background="@null"
            android:layout_marginLeft="80dp" />

    </RelativeLayout>
    <!--分隔符-->
    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item4"
        android:background="#1e000000" />


    <RelativeLayout
        android:id="@+id/item5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider5"
        android:background="@drawable/background_tab"
        android:padding="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_name5"
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学历"
            android:gravity="center_horizontal" />
        <!--<TextView-->
            <!--android:id="@+id/tv_edu"-->
            <!--android:hint="select your edu"-->
            <!--style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="top"-->
            <!--android:layout_marginLeft="80dp" />-->

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edu_spinner"
            android:gravity="top"
            android:layout_marginLeft="72dp"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
    <!--分隔符-->
    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item5"
        android:background="#1e000000" />

    <RelativeLayout
        android:id="@+id/item6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider6"
        android:background="@drawable/background_tab"
        android:padding="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_name6"
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱好"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/et_hobby"
            android:hint="type your hobby"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:singleLine="true"
            android:maxLength="20"
            style="?android:attr/textViewStyle"
            android:background="@null"
            android:layout_marginLeft="80dp" />
    </RelativeLayout>
    <!--分隔符-->
    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item6"
        android:background="#1e000000" />

    <RelativeLayout
        android:id="@+id/rl_start_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_tab"
        android:layout_marginTop="16dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_below="@+id/divider7"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/start_chat2"/>

        <TextView
            android:id="@+id/tv_start_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_chat"
            android:text="开始对话"
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:layout_centerVertical="true" />

    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.gc.materialdesign.views.ProgressBarCircularIndetermininate
            android:layout_gravity="center"
            android:id="@+id/progressBarCircularIndetermininate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/colorPrimary"/>

    </FrameLayout>


</RelativeLayout>
