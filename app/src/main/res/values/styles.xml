<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TBApp="http://schemas.android.com/apk/res/res-auto">

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="isLightTheme">true</item>
        <item name="selectableItemBackground">@android:color/white</item>

    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <!--<item name="colorPrimary">#4876FF</item>-->
        <item name="colorPrimary">#FF3D00</item>
        <!-- 状态栏颜色 -->
        <!--<item name="colorPrimaryDark">#3A5FCD</item>-->
        <item name="colorPrimaryDark">#DD2C00</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- SearchView -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>

        <!--<item name="titleTextAppearance">?android:attr/textAppearanceSmallInverse</item>-->
    </style>
    
    <style name="Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <!--<item name="colorPrimary">#4876FF</item>-->
        <item name="colorPrimary">#FF3D00</item>
        <!-- 状态栏颜色 -->
        <!--<item name="colorPrimaryDark">#3A5FCD</item>-->
        <item name="colorPrimaryDark">#DD2C00</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- SearchView -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>

        <!--<item name="titleTextAppearance">?android:attr/textAppearanceSmallInverse</item>-->
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"/>

    <!--<style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">-->
        <!--<item name="TBApp:titleTextAppearance">?android:attr/textAppearanceSmallInverse</item>-->
    <!--</style>-->

